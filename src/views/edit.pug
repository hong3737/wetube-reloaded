extends base.pug

block content 
    h4 Update Video
    form(method="POST") 
        input(name="title", placeholder="Video Title", value=video.title, type="text", required, maxlength=80)
        input(name="description", placeholder="Description",value=video.description, type="text", required, minlength=20)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), type="text")
        input(type="submit", value="Upload Video")